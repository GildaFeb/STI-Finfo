<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="STI_Finfo.AddRequest">
    <StackLayout Padding="5">
        <Label Text="Name" FontAttributes="Bold" TextColor="Black"/>
        <Entry Placeholder="Last name" FontSize="Small" HorizontalOptions="FillAndExpand" x:Name="last"/>
        <Label Text="Address" FontAttributes="Bold" TextColor="Black"/>
        <Entry Placeholder="First name" FontSize="Small" HorizontalOptions="FillAndExpand" x:Name="first"/>
        <Label Text="Phone Number" FontAttributes="Bold" TextColor="Black"/>
        <Entry Placeholder="Middle name" FontSize="Small" HorizontalOptions="FillAndExpand" x:Name="middle" 
                   Keyboard="Numeric"/>
        <Label Text="Email" FontAttributes="Bold" TextColor="Black"/>
        <Entry Placeholder="Suffix" FontSize="Small" HorizontalOptions="FillAndExpand" Keyboard="Email" x:Name="suffix"/>
       

        <Button Text="Save" Clicked="SaveRequests" HorizontalOptions="FillAndExpand" 
                    BackgroundColor="Maroon" TextColor="White" x:Name="saveBtn"/>
    </StackLayout>
</ContentPage>