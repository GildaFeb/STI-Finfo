<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="STI_Finfo.TableRequest">
    <StackLayout Padding="5">
        <Button Text="Add Request" HorizontalOptions="FillAndExpand" 
                BackgroundColor="Orange" TextColor="Black" Clicked="AddRequest"/>

        <ListView x:Name="RequestList" HasUnevenRows="True" ItemTapped="EditRequest">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Delete" Clicked="DeleteRequest" IsDestructive="true" CommandParameter="{Binding .}"/>
                        </ViewCell.ContextActions>
                        <StackLayout Spacing="2">
                            <Label Text="{Binding LastName,StringFormat='Name:{0:F0}'}" FontSize="Small" FontAttributes="Bold"/>
                            <Label Text="{Binding FirstName,StringFormat='Address:{0:F0}'}" FontSize="Small" FontAttributes="None"/>
                            <Label Text="{Binding MiddleName,StringFormat='Phone No :{0:F0}'}" FontSize="Small" FontAttributes="None"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>